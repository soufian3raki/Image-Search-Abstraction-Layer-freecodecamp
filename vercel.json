{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "UNSPLASH_ACCESS_KEY": "@unsplash_access_key"
  },
  "regions": ["iad1"]
}
